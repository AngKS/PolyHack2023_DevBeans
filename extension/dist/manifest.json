{
  "manifest_version": 3,
  "name": "Mindful Beans",
  "description": "Mindful Beans Chrome Extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "mindfulBeans.html",
    "default_title": "Mindful Beans",
    "default_icon": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",  
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
